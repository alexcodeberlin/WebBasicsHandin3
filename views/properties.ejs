</style>
</head>
<body>
    <h1>Properties</h1>

    <h2>Add Property</h2>
    <form action="/add-property" method="POST">
        <input type="text" name="title" placeholder="Title" required>
        <input type="text" name="description" placeholder="Description" required>
        <input type="number" step="0.01" name="price" placeholder="Price" required>
        <input type="text" name="location" placeholder="Location" required>
        <input type="number" name="owner_id" placeholder="Owner ID" required>
        <button type="submit">Add Property</button>
    </form>

    <h2>Property List</h2>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Location</th>
                <th>Owner Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% properties.forEach(property => { %>
                <tr>
                    <td><%= property.id %></td>
                    <td><%= property.title %></td>
                    <td><%= property.description %></td>
                    <td><%= property.price %></td>
                    <td><%= property.location %></td>
                    <td><%= property.owner_name || 'N/A' %></td>
                    <td>
						<div class="action-buttons">
							<form action="/update-property/<%= property.id %>" method="POST" class="action-form">
								<input type="text" name="title" value="<%= property.title %>" required>
								<input type="text" name="description" value="<%= property.description %>" required>
								<input type="number" step="0.01" name="price" value="<%= property.price %>" required>
								<input type="text" name="location" value="<%= property.location %>" required>
								<input type="number" name="owner_id" value="<%= property.owner_id %>" required>
								<button type="submit" class="btn update-btn">Update</button>
							</form>
							<form action="/delete-property/<%= property.id %>" method="POST" class="action-form">
								<button type="submit" class="btn delete-btn">Delete</button>
							</form>
						</div>
					</td>

                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
